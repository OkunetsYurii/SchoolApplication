@model SchoolApplication.Models.Test

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Test</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <div id="accordion">
        @foreach (Question question in Model.Questions)
        {
            string collapsName = "collapse" + question.Id;
            <div class="card">
                <div class="card-header" id="@question.Id">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#@collapsName" aria-expanded="true" aria-controls="@collapsName">
                            @question.Text
                        </button>
                    </h5>
                </div>
                <div id="@collapsName" class="collapse" aria-labelledby="@question.Id" data-parent="#accordion">
                    <div class="card-body">
                        @foreach (Answer answer in question.Answers)
                        {
                            @answer.Text <br />
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
