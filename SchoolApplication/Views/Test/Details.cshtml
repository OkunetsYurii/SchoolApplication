@model Test
@{
    ViewData["Title"] = "Datails Page";
}
<div class="text-center">
    <h3 class="display-4">@Model.Name</h3>
    <p>
        @Model.Description
    </p>
</div>
<form asp-action="StartTest">
    <div>
        <div class="form-check">
            <input type="hidden" asp-for="Id" />
            <input type="checkbox" class="form-check-input" id="isAgreeCheck" onchange="submitEnabled(this.checked)">
            <label class="form-check-label" for="iAgreeCheck">I agree to start</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Proceed" class="btn btn-dark" id="submitBtn" disabled />
        </div>
    </div>
</form>
<script>
    function submitEnabled(checkboxValue) {
        submitBtn.disabled = !checkboxValue;
    }
</script>
